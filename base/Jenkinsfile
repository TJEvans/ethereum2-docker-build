pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout scm
                dir('base') { 
                    sh 'docker build  --build-arg=BASE=${BASE} -t stereum/beacon-base:${BASE}-soft .'
                }
            }
        }
        stage('Push Soft') {
            steps {                
                sh 'docker push stereum/beacon-base:${BASE}-soft'
            }
        }
        stage('Harden') {
            steps {
                dir('base') { 
                    sh 'docker build -f Dockerfile_harden --build-arg=BASE=${BASE} -t stereum/beacon-base:${BASE} .'                    
                }
            }
        }
        stage('Push Hardened') {
            steps {                
                sh 'docker push stereum/beacon-base:${BASE}'
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}
