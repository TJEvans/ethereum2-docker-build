pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout scm
                dir('base') { 
                    sh 'docker build  --build-arg=BASE=${BASE} -t stereum/beacon-base:${BASE}-soft .'                    
                }
            }
        }
        stage('Push') {
            when {                
                    expression { params.SKIP_PUSH == 'false' }
            }
            steps {                
                sh 'docker push stereum/beacon-base:${BASE}-soft'                
            }
        }
        stage('Hardening') {            
            steps {                                                
                build job: 'beacon-base-harden', parameters: [[$class: 'StringParameterValue', name: 'BASE', value: BASE],[$class: 'StringParameterValue', name: 'SKIP_PUSH', value: SKIP_PUSH]], propagate: false, wait: false
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}
