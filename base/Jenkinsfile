pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout scm
                dir('base') { 
                    // build base image
                    sh 'docker build  --build-arg=BASE=${BASE} -t stereum/beacon-base:${BASE}-soft .'                    
                }
            }
        }
        stage('Push Soft') {
            steps {                
                sh 'docker push stereum/beacon-base:${BASE}-soft'
            }
        }        
    }
    post { 
        always { 
            cleanWs()
        }
    }
}
