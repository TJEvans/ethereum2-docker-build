pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout scm
                dir('lighthouse') {                     
                    sh 'docker build -f Dockerfile --build-arg=BEACON_BASE=${BASE} --build-arg=RELEASE=${RELEASE} --target lighthouse -t stereum/lighthouse:${RELEASE}-soft .'
                }
            }
        }
        stage('Push') {
            steps {                                
                sh 'docker push stereum/lighthouse:${RELEASE}-soft'                                
            }
        }
        stage('Hardening') {
            steps {                                                
                build job: 'lighthouse-harden', parameters: [[$class: 'StringParameterValue', name: 'RELEASE', value: RELEASE] ], propagate: false, wait: false
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}