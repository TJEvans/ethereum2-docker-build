pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout scm
                dir('nimbus-beacon-chain') { 
                    sh 'docker build --build-arg=RELEASE=${RELEASE} --build-arg=BEACON_BASE=${BASE} -t stereum/nimbus-beacon-chain:${RELEASE}-soft .'
                    sh 'docker push stereum/nimbus-beacon-chain:${RELEASE}-soft'
                }
            }
        }
        stage('Harden') {
            steps {
                dir('nimbus-beacon-chain') { 
                    sh 'docker build -f Dockerfile_harden --build-arg=RELEASE=${RELEASE} -t stereum/nimbus-beacon-chain:${RELEASE} .'
                    sh 'docker push stereum/nimbus-beacon-chain:${RELEASE}'
                }
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}