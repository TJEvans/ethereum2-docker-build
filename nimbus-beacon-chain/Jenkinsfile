pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout scm
                dir('nimbus-beacon-chain') { 
                    sh 'docker build --build-arg=RELEASE=${RELEASE} --build-arg=BEACON_BASE=${BASE} -t stereum/nimbus-beacon-chain:${RELEASE}-soft .'                    
                }
            }
        }
        stage('Push') {
            steps {                                
                sh 'docker push stereum/nimbus-beacon-chain:${RELEASE}-soft'
            }
        }
        stage('Hardening') {
            steps {                                                
                build job: 'nimbus-beacon-chain-harden', parameters: [[$class: 'StringParameterValue', name: 'RELEASE', value: RELEASE] ], propagate: false, wait: false
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}