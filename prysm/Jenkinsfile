pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                checkout scm
                dir('prysm') {                     
                    sh 'docker build -f Dockerfile --build-arg=BEACON_BASE=${BASE} --build-arg=RELEASE=${RELEASE} --target beacon-chain -t stereum/prysm-beacon-chain:${RELEASE}-soft .'
                    sh 'docker build -f Dockerfile --build-arg=BEACON_BASE=${BASE} --build-arg=RELEASE=${RELEASE} --target slasher -t stereum/prysm-slasher:${RELEASE}-soft .'
                    sh 'docker build -f Dockerfile --build-arg=BEACON_BASE=${BASE} --build-arg=RELEASE=${RELEASE} --target validator -t stereum/prysm-validator:${RELEASE}-soft .'
                }
            }
        }
        stage('Push') {
            steps {                                
                sh 'docker push stereum/prysm-beacon-chain:${RELEASE}-soft'                
                sh 'docker push stereum/prysm-slasher:${RELEASE}-soft'
                sh 'docker push stereum/prysm-validator:${RELEASE}-soft'
            }
        }
        stage('Hardening') {
            steps {                                                
                build job: 'prysm-harden', parameters: [[$class: 'StringParameterValue', name: 'RELEASE', value: RELEASE] ], propagate: false, wait: false
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}